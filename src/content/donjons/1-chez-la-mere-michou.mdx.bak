  }
  
  .section-title-text {
    position: relative;
    z-index: 1;
    background: linear-gradient(90deg, rgb(6, 182, 212), rgb(14, 165, 233));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    padding-right: 1rem;
  }
  
  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, rgb(6, 182, 212), transparent);
    border-radius: 2px;
  }
  
  .section-title-strategy {
    background: linear-gradient(90deg, rgb(250, 204, 21), rgb(234, 179, 8));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .section-title-strategy + div {
    position: relative;
  }
  
  .section-title-strategy + div::before {
    content: '';
    position: absolute;
    top: -20px;
    right: -20px;
    width: 150px;
    height: 150px;
    background: radial-gradient(circle, rgba(250, 204, 21, 0.15), transparent 70%);
    z-index: -1;
    border-radius: 50%;
  }
  
  .section-title-rewards {
    background: linear-gradient(90deg, rgb(249, 115, 22), rgb(217, 119, 6));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .section-title-conclusion {
    background: linear-gradient(90deg, rgb(168, 85, 247), rgb(147, 51, 234));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .room-card {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .room-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 20px rgba(6, 182, 212, 0.2);
  }
  
  .room-header {
    background: rgba(6, 182, 212, 0.1);
    padding: 1rem;
    border-bottom: 1px solid rgba(6, 182, 212, 0.2);
  }
  
  .room-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    background: rgba(6, 182, 212, 0.2);
    color: rgb(6, 182, 212);
    border-radius: 50%;
    margin-right: 0.75rem;
    font-size: 1rem;
    font-weight: 700;
  }
  
  .room-title {
    color: rgb(6, 182, 212);
