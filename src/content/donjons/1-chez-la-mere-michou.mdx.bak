  }
  
  .spells-list {
    padding-left: 1rem;
    list-style-type: disc;
  }
  
  .spell-item {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.25rem;
  }
  
  .spell-name {
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
  }
  
  .reward-category {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .reward-category:hover {
    transform: translateY(-5px);
