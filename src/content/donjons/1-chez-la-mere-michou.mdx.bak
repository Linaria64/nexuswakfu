    background: linear-gradient(90deg, rgb(249, 115, 22), transparent);
  }
  
  .reward-category-title {
    display: flex;
    align-items: center;
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(249, 115, 22);
    margin-bottom: 1rem;
  }
  
  .category-icon {
    display: inline-block;
    width: 24px;
    height: 24px;
    margin-right: 0.75rem;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
  }
  
  .reward-list {
    list-style-type: none;
    padding: 0;
  }
  
  .reward-item {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .reward-item::before {
    content: '•';
    position: absolute;
    left: 0;
    color: rgb(249, 115, 22);
    font-weight: bold;
  }
</style>


