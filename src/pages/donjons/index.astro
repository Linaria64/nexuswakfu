import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

// Cr√©er un tableau de 80 donjons
const donjonsTries = Array.from({ length: 80 }, (_, i) => ({
  slug: `donjon-${i}`,
  data: {
    name: `Donjon ${i + 1}`,
    difficulty: 'medium',
    level: '50',
    description: 'Un donjon myst√©rieux rempli de d√©fis et de tr√©sors. Les aventuriers devront faire preuve de courage et de strat√©gie pour en venir √† bout.',
    bosses: [{ name: 'Boss 1', level: 50 }],
    players: 'both',
    image: {
      src: "/images/donjons/default.jpg",
      alt: `Donjon ${i + 1}`
    }
  }
}));

const difficultyLabels = {
  'easy': { label: 'Facile', color: 'bg-green-500', textColor: 'text-green-500' },
  'medium': { label: 'Moyen', color: 'bg-yellow-500', textColor: 'text-yellow-500' },
  'hard': { label: 'Difficile', color: 'bg-orange-500', textColor: 'text-orange-500' },
  'extreme': { label: 'Extr√™me', color: 'bg-red-500', textColor: 'text-red-500' }
};

// D√©finir les drops importants pour chaque donjon (simul√©s pour l'exemple)
const donjonDrops = {
  "mere-michou": [
    { name: "Louche L√©gendaire", rate: 2, important: true },
    { name: "Recette secr√®te", rate: 5, important: true }
  ],
  "paturages-bouftous": [
    { name: "Corne du Bouftou Royal", rate: 3, important: true },
    { name: "Cuir de Bouftou Premium", rate: 7, important: true }
  ]
};

// Formater les strat√©gies pour qu'elles soient plus lisibles
const formatStrategy = (strategy) => {
  if (!strategy) return "Strat√©gie √† venir...";
  const sentences = strategy.split(/\.\s+/);
  const validSentences = sentences.filter(s => s.trim().length > 0);
  const formattedSentences = validSentences.map(s => {
    let sentence = s.trim();
    if (!sentence.endsWith('.')) {
      sentence += '.';
    }
    return sentence;
  });
  return formattedSentences;
};
---

<MainLayout title="Donjons de Wakfu" description="Guides et strat√©gies pour tous les donjons de Wakfu, du niveau 1 √† 230">
  <div class="min-h-screen bg-gray-900">
    <!-- Hero Section -->
    <div class="relative py-20 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-900"></div>
        <img src="/images/dungeons-hero.jpg" alt="Donjons de Wakfu" class="w-full h-full object-cover opacity-40">
      </div>
      
      <div class="relative z-10 container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 text-white">
            Donjons de <span class="text-wakfu-secondary">Wakfu</span>
          </h1>
