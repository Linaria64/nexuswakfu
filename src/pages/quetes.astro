    /* Styles pour les boutons de navigation */
    .carousel-button {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        opacity: 0.7;
    }
    
    .carousel-button:hover {
        opacity: 1;
        transform: scale(1.1);
    }
    
    /* Styles pour les indicateurs */
    .carousel-indicators {
        z-index: 20;
    }
    
    .carousel-indicator {
        border: none;
        transition: all 0.3s ease;
        margin: 0 2px;
    }
    
    .carousel-indicator:hover {
        transform: scale(1.5);
    }
    
    /* Transition simple entre les diapositives sans animation */
