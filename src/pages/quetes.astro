                                        <div class="mb-4 text-center w-full">
                                            <h3 class="text-lg md:text-xl font-bold text-white mb-3 overflow-hidden text-ellipsis">
                                                {quest.title}
                                            </h3>
                                            {quest.level && (
                                                <span class="inline-block px-4 py-1 text-sm bg-white/30 text-white rounded-full">
                                                    Niveau {quest.level}
                                                </span>
                                            )}
                                        </div>
                                        
