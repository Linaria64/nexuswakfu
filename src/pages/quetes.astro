        background: linear-gradient(135deg, rgba(251, 146, 60, 0.7) 0%, rgba(194, 65, 12, 0.7) 100%);
        border: 1px solid rgba(251, 146, 60, 0.4);
    }
    
    /* Styles pour le mode sombre */
