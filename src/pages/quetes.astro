    /* Fond stylisé pour la page */
    main {
        position: relative;
        overflow: hidden;
    }
    
    main::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 80% 10%, rgba(66, 153, 225, 0.08) 0%, transparent 60%),
