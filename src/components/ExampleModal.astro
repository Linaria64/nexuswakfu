---
import Modal from './ui/Modal.astro';
---

<div class="flex gap-4">
  <!-- Default size modal trigger -->
  <button
    class="btn btn-primary"
    data-modal-target="example-modal"
  >
    Open Default Modal
  </button>

  <!-- Full size modal trigger -->
  <button
    class="btn btn-secondary"
    data-modal-target="full-modal"
  >
    Open Full Modal
  </button>
</div>

<!-- Default size modal -->
<Modal id="example-modal" title="Example Modal">
  <div class="space-y-4">
    <p class="text-gray-300">
      This is an example modal with default size. It contains some sample content to demonstrate the modal functionality.
    </p>
    <div class="bg-gray-800 rounded-lg p-4">
      <h3 class="text-lg font-semibold text-white mb-2">Sample Content</h3>
      <p class="text-gray-300">
        You can put any content here - text, images, forms, or other components.
      </p>
    </div>
  </div>
</Modal>

<!-- Full size modal -->
<Modal id="full-modal" title="Full Size Modal" size="full">
  <div class="space-y-4">
    <p class="text-gray-300">
      This is an example of a full-size modal. It's wider than the default modal and is useful for displaying more content.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-gray-800 rounded-lg p-4">
        <h3 class="text-lg font-semibold text-white mb-2">Left Column</h3>
        <p class="text-gray-300">Content for the left column goes here.</p>
      </div>
      <div class="bg-gray-800 rounded-lg p-4">
        <h3 class="text-lg font-semibold text-white mb-2">Right Column</h3>
        <p class="text-gray-300">Content for the right column goes here.</p>
      </div>
    </div>
  </div>
</Modal> 