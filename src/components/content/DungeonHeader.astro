---
interface Props {
  image: {
    src: string;
    alt: string;
  };
  name: string;
  level: number;
  difficulty: string;
  players: string;
  region: string;
  description: string;
}

const { image, name, level, difficulty, players, region, description } = Astro.props;
---

<div class="dungeon-header">
  <div class="dungeon-image-wrapper">
    <img src={image.src} alt={image.alt} class="dungeon-image" />
  </div>
  <div class="dungeon-info">
    <div class="flex flex-wrap gap-3 mb-4">
      <div class={`status-badge ${difficulty}`}>{difficulty}</div>
      <div class="status-badge level">Niveau {level}</div>
      <div class="status-badge players">{players}</div>
    </div>
    <p class="text-gray-300 mb-2">{description}</p>
    <p class="text-sm text-cyan-400 font-semibold">{region}</p>
  </div>
</div> 