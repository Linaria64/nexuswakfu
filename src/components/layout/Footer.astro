---
const currentYear = new Date().getFullYear();

const footerLinks = {
  guides: [
    { text: "Classes", href: "/classes/" },
    { text: "Donjons", href: "/donjons/" },
    { text: "Métiers", href: "/metiers/" },
    { text: "Stuff", href: "/guides/stuff/" },
    { text: "Sublimations", href: "/guides/sublimations/" },
  ],
  utilités: [
    { text: "Calculatrice XP", href: "/outils/xp/" },
    { text: "Comparateur d'items", href: "/outils/comparateur/" },
    { text: "Simulateur de builds", href: "/outils/builds/" },
  ],
  ressources: [
    { text: "Site officiel Wakfu", href: "https://www.wakfu.com", external: true },
    { text: "Forum officiel", href: "https://www.wakfu.com/fr/forum", external: true },
    { text: "Encyclopédie", href: "/encyclopedie/" },
  ],
  communauté: [
    { text: "Discord", href: "https://discord.gg/guidewakfu", external: true },
    { text: "Contribuer", href: "/contribuer/" },
    { text: "Nous contacter", href: "/contact/" },
  ],
};

// Social media links
const socialLinks = [
  { name: "Discord", href: "https://discord.gg/guidewakfu", icon: "discord" },
  { name: "Twitter", href: "https://twitter.com/guidewakfu", icon: "twitter" },
  { name: "GitHub", href: "https://github.com/guidewakfu", icon: "github" },
];
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
  <div class="max-w-7xl mx-auto pt-12 px-4 sm:px-6 lg:pt-16 lg:px-8">
    <div class="xl:grid xl:grid-cols-5 xl:gap-8">
      <div class="xl:col-span-1 space-y-8">
        <img class="h-10" src="/images/ui/logo.svg" alt="Guide Wakfu" />
        <p class="text-gray-600 dark:text-gray-400 text-base">
          Guide non-officiel pour les joueurs de Wakfu, le MMORPG tactique d'Ankama.
        </p>
        <div class="flex space-x-6">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-gray-500 hover:text-wakfu-primary dark:text-gray-400 dark:hover:text-wakfu-secondary transition-colors"
            >
              <span class="sr-only">{social.name}</span>
              {social.icon === "discord" && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z" />
                </svg>
              )}
              {social.icon === "twitter" && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              )}
              {social.icon === "github" && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <div class="mt-12 grid grid-cols-2 gap-8 xl:mt-0 xl:col-span-4">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 tracking-wider uppercase">
              Guides
            </h3>
            <ul class="mt-4 space-y-4">
              {footerLinks.guides.map(link => (
                <li>
                  <a href={link.href} class="text-base text-gray-600 hover:text-wakfu-primary dark:text-gray-400 dark:hover:text-wakfu-secondary transition-colors">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 tracking-wider uppercase">
              Utilités
            </h3>
            <ul class="mt-4 space-y-4">
              {footerLinks.utilités.map(link => (
                <li>
                  <a href={link.href} class="text-base text-gray-600 hover:text-wakfu-primary dark:text-gray-400 dark:hover:text-wakfu-secondary transition-colors">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 tracking-wider uppercase">
              Ressources
            </h3>
            <ul class="mt-4 space-y-4">
              {footerLinks.ressources.map(link => (
                <li>
                  <a 
                    href={link.href} 
                    class="text-base text-gray-600 hover:text-wakfu-primary dark:text-gray-400 dark:hover:text-wakfu-secondary transition-colors"
                    target={link.external ? "_blank" : undefined}
                    rel={link.external ? "noopener noreferrer" : undefined}
                  >
                    {link.text}
                    {link.external && (
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1 inline-block">
                        <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 00-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 00.75-.75v-4a.75.75 0 011.5 0v4A2.25 2.25 0 0112.75 17h-8.5A2.25 2.25 0 012 14.75v-8.5A2.25 2.25 0 014.25 4h5a.75.75 0 010 1.5h-5z" clip-rule="evenodd" />
                        <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 001.06.053L16.5 4.44v2.81a.75.75 0 001.5 0v-4.5a.75.75 0 00-.75-.75h-4.5a.75.75 0 000 1.5h2.553l-9.056 8.194a.75.75 0 00-.053 1.06z" clip-rule="evenodd" />
                      </svg>
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 tracking-wider uppercase">
              Communauté
            </h3>
            <ul class="mt-4 space-y-4">
              {footerLinks.communauté.map(link => (
                <li>
                  <a 
                    href={link.href} 
                    class="text-base text-gray-600 hover:text-wakfu-primary dark:text-gray-400 dark:hover:text-wakfu-secondary transition-colors"
                    target={link.external ? "_blank" : undefined}
                    rel={link.external ? "noopener noreferrer" : undefined}
                  >
                    {link.text}
                    {link.external && (
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1 inline-block">
                        <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 00-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 00.75-.75v-4a.75.75 0 011.5 0v4A2.25 2.25 0 0112.75 17h-8.5A2.25 2.25 0 012 14.75v-8.5A2.25 2.25 0 014.25 4h5a.75.75 0 010 1.5h-5z" clip-rule="evenodd" />
                        <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 001.06.053L16.5 4.44v2.81a.75.75 0 001.5 0v-4.5a.75.75 0 00-.75-.75h-4.5a.75.75 0 000 1.5h2.553l-9.056 8.194a.75.75 0 00-.053 1.06z" clip-rule="evenodd" />
                      </svg>
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Newsletter -->
    <div class="mt-12 border-t border-gray-200 dark:border-gray-800 pt-8">
      <div class="max-w-3xl mx-auto mb-8">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4 text-center">
          Recevez nos derniers guides et astuces
        </h3>
        <form class="sm:flex">
          <label for="email-address" class="sr-only">Adresse email</label>
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            required
            class="w-full px-4 py-2 placeholder-gray-500 border border-gray-300 dark:border-gray-700 rounded-md bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-wakfu-primary dark:focus:ring-wakfu-secondary focus:border-wakfu-primary dark:focus:border-wakfu-secondary"
            placeholder="Entrez votre email"
          />
          <div class="mt-3 sm:mt-0 sm:ml-3">
            <button
              type="submit"
              class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md text-white bg-wakfu-primary hover:bg-wakfu-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-wakfu-primary dark:bg-wakfu-secondary dark:hover:bg-wakfu-secondary-dark dark:focus:ring-wakfu-secondary"
            >
              S'abonner
            </button>
          </div>
        </form>
        <p class="mt-3 text-sm text-gray-500 dark:text-gray-400 text-center">
          Nous respectons votre vie privée. Désabonnez-vous à tout moment.
        </p>
      </div>
      
      <p class="text-base text-gray-500 dark:text-gray-400 text-center">
        &copy; {currentYear} Guide Wakfu. Tous droits réservés.
        <br class="sm:hidden" />
        Wakfu est un jeu développé et édité par <a href="https://www.ankama.com" class="hover:text-wakfu-primary dark:hover:text-wakfu-secondary transition-colors" target="_blank" rel="noopener noreferrer">Ankama</a>.
      </p>
    </div>
  </div>
</footer> 